{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist", "out", "public"],
  "include": ["src/**/*.js"]
}
